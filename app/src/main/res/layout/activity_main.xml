<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Battery Temperature -->
    <TextView
        android:id="@+id/temperatureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Temperature"
        android:textSize="18sp"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/shakeConditionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Shaking Status: Normal"
        android:textSize="18sp" />

    <!-- TextView for gyroscope readings -->
    <TextView
        android:id="@+id/textX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temperatureText"
        android:layout_marginTop="8dp"
        android:text="Gyro X:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textX"
        android:layout_marginTop="8dp"
        android:text="Gyro Y:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textY"
        android:layout_marginTop="8dp"
        android:text="Gyro Z:"
        android:textSize="18sp" />

    <!-- Magnetic Direction -->
    <TextView
        android:id="@+id/directionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direction"
        android:textSize="18sp"
        android:layout_margin="8dp" />

    <!-- Barometer Pressure -->

    <TextView
        android:id="@+id/barometerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Pressure"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonSendTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="sendTestSms"
        android:text="Send Test SMS" />

    <Button
        android:id="@+id/buttonOpenMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Open Map" />

    <Button
        android:id="@+id/buttonSensorManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sensor Manager" />

    <TextView
        android:id="@+id/soundStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listening..."
        android:textSize="18sp"
        android:layout_margin="8dp" />
    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Log Out" />

</LinearLayout>
